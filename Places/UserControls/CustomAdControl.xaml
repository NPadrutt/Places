<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:adduplex="clr-namespace:Microsoft.Advertising.Mobile.UI;assembly=Microsoft.Advertising.Mobile.UI"
             xmlns:AdDuplex="clr-namespace:AdDuplex;assembly=AdDuplex.WindowsPhone" x:Class="Places.UserControls.CustomAdControl"
             mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" VerticalAlignment="Top" Height="80" Loaded="UserControl_Loaded">
    
	<Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}" VerticalAlignment="Top">
		<AdDuplex:AdControl x:Name="AdDuplexAd" HorizontalAlignment="Left" VerticalAlignment="Top" AppId="53995"/>
		<adduplex:AdControl x:Name="MSAdControl" ApplicationId="ab86e91b-e1f7-4606-882f-1f24f96f745e" AdUnitId="10154433" HorizontalAlignment="Left" Height="80" Margin="0,0,0,-20" VerticalAlignment="Top" Width="480" AdRefreshed="MSAdControl_AdRefreshed" ErrorOccurred="MSAdControl_ErrorOccurred" IsAutoCollapseEnabled="True" IsAutoRefreshEnabled="True"/>
	</Grid>
</UserControl>